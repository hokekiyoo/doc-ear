{
  "manifest_version": 2,
  "version": "0.0.1",
  "short_name": "doc-ear",
  "name": "doc-ear",
  "description": "save articles with phrases to notion.so",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "<all_urls>",
    "*://api.notion.com/*",
    "*://www.notion.so/*",
    "storage",
    "tabs"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
